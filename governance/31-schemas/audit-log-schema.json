{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://synergymesh.io/governance/schemas/audit-log-schema.json",
  "title": "Audit Log Schema",
  "description": "Schema for governance audit log entries",
  "type": "object",
  "required": ["log_id", "timestamp", "action", "actor", "outcome"],
  "properties": {
    "log_id": {
      "type": "string",
      "pattern": "^audit-[0-9]{4}-[0-9]{2}-[0-9]{2}-[a-z0-9]+$",
      "description": "Unique audit log identifier"
    },
    "trace_id": {
      "type": "string",
      "description": "Distributed trace ID for correlation"
    },
    "span_id": {
      "type": "string",
      "description": "Span ID within the trace"
    },
    "parent_span_id": {
      "type": "string",
      "description": "Parent span ID"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp"
    },
    "dimension": {
      "type": "string",
      "pattern": "^\\d{2}-[a-z-]+$",
      "description": "Governance dimension ID"
    },
    "action": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "description": "Action type"
        },
        "operation": {
          "type": "string",
          "enum": ["create", "read", "update", "delete", "execute", "validate", "approve", "reject"]
        },
        "severity": {
          "type": "string",
          "enum": ["debug", "info", "warning", "error", "critical"]
        }
      }
    },
    "actor": {
      "type": "object",
      "required": ["type", "id"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["human", "ai_agent", "system", "service"]
        },
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "roles": {
          "type": "array",
          "items": {"type": "string"}
        }
      }
    },
    "resource": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "version": {
          "type": "string"
        }
      }
    },
    "outcome": {
      "type": "object",
      "required": ["status"],
      "properties": {
        "status": {
          "type": "string",
          "enum": ["success", "failure", "partial", "pending"]
        },
        "duration_ms": {
          "type": "integer",
          "minimum": 0
        },
        "error": {
          "type": "object",
          "properties": {
            "code": {"type": "string"},
            "message": {"type": "string"},
            "details": {"type": "object"}
          }
        }
      }
    },
    "context": {
      "type": "object",
      "properties": {
        "intent_id": {
          "type": "string"
        },
        "policy_id": {
          "type": "string"
        },
        "workflow_id": {
          "type": "string"
        },
        "environment": {
          "type": "string"
        },
        "source_ip": {
          "type": "string"
        },
        "user_agent": {
          "type": "string"
        }
      }
    },
    "changes": {
      "type": "object",
      "properties": {
        "before": {
          "type": "object"
        },
        "after": {
          "type": "object"
        },
        "diff": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "path": {"type": "string"},
              "op": {"type": "string", "enum": ["add", "remove", "replace"]},
              "value": {}
            }
          }
        }
      }
    },
    "evidence": {
      "type": "object",
      "properties": {
        "hash": {
          "type": "string",
          "description": "SHA-256 hash of log content"
        },
        "signature": {
          "type": "string",
          "description": "Digital signature"
        },
        "chain_id": {
          "type": "string",
          "description": "Evidence chain ID"
        },
        "previous_hash": {
          "type": "string",
          "description": "Hash of previous log entry"
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string",
          "default": "1.0.0"
        },
        "schema": {
          "type": "string",
          "default": "audit-log-schema.json"
        },
        "retention": {
          "type": "object",
          "properties": {
            "tier": {
              "type": "string",
              "enum": ["hot", "warm", "cold", "archive"]
            },
            "expires_at": {
              "type": "string",
              "format": "date-time"
            }
          }
        }
      }
    }
  }
}
