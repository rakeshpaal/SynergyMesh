{
  "dashboard": {
    "title": "Governance-as-Code (GaC) Dashboard",
    "tags": ["governance", "gac", "compliance"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "annotations": {
      "list": [
        {
          "name": "Governance Events",
          "datasource": "Prometheus",
          "enable": true,
          "expr": "ALERTS{component=~\"governance.*\"}",
          "iconColor": "rgba(255, 96, 96, 1)",
          "tagKeys": "severity"
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "Governance Resources Status",
        "type": "stat",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "governance:resources:total",
            "legendFormat": "Total Resources"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 8, "color": "yellow" },
                { "value": 9, "color": "green" }
              ]
            }
          }
        },
        "gridPos": { "h": 8, "w": 6, "x": 0, "y": 0 }
      },
      {
        "id": 2,
        "title": "Compliance Rate",
        "type": "gauge",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "governance:compliance:rate",
            "legendFormat": "Compliance %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 80, "color": "yellow" },
                { "value": 95, "color": "green" }
              ]
            }
          }
        },
        "gridPos": { "h": 8, "w": 6, "x": 6, "y": 0 }
      },
      {
        "id": 3,
        "title": "GitOps Sync Status",
        "type": "stat",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "count(argocd_app_sync_status{name=~\"gac-.*\",sync_status=\"Synced\"})",
            "legendFormat": "Synced Apps"
          }
        ],
        "gridPos": { "h": 8, "w": 6, "x": 12, "y": 0 }
      },
      {
        "id": 4,
        "title": "Policy Violations (Last 1h)",
        "type": "stat",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "increase(gatekeeper_violations{enforcement_action=\"deny\"}[1h])",
            "legendFormat": "Violations"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 1, "color": "yellow" },
                { "value": 5, "color": "red" }
              ]
            }
          }
        },
        "gridPos": { "h": 8, "w": 6, "x": 18, "y": 0 }
      },
      {
        "id": 5,
        "title": "Governance Resources by Type",
        "type": "piechart",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "count by (customresource_kind) (kube_customresource_version{customresource_group=\"governance.kai\"})",
            "legendFormat": "{{customresource_kind}}"
          }
        ],
        "gridPos": { "h": 12, "w": 12, "x": 0, "y": 8 }
      },
      {
        "id": 6,
        "title": "Policy Enforcement Rate",
        "type": "graph",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "governance:policy:enforcement_rate",
            "legendFormat": "Enforcement Rate"
          }
        ],
        "yaxes": [{ "format": "ops", "label": "Rate" }],
        "gridPos": { "h": 12, "w": 12, "x": 12, "y": 8 }
      },
      {
        "id": 7,
        "title": "Strategic Documents Coverage",
        "type": "table",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "kube_customresource_labels{customresource_group=\"governance.kai\"}",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {},
              "indexByName": {},
              "renameByName": {
                "customresource_kind": "Type",
                "name": "Instance",
                "namespace": "Namespace"
              }
            }
          }
        ],
        "gridPos": { "h": 12, "w": 24, "x": 0, "y": 20 }
      }
    ]
  }
}
