{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Governance Policy Schema",
  "description": "Standard schema for all governance policy YAML files",
  "type": "object",
  "required": ["name", "description", "version", "enforcement", "rules"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Policy name",
      "minLength": 1,
      "maxLength": 100
    },
    "description": {
      "type": "string",
      "description": "Policy description",
      "minLength": 10,
      "maxLength": 500
    },
    "version": {
      "type": "string",
      "description": "Policy version (semantic versioning)",
      "pattern": "^\\d+\\.\\d+(\\.\\d+)?$"
    },
    "enforcement": {
      "type": "string",
      "description": "Policy enforcement level",
      "enum": ["strict", "warning", "advisory"]
    },
    "rules": {
      "type": "object",
      "description": "Policy rules and requirements",
      "minProperties": 1,
      "additionalProperties": true
    },
    "dependencies": {
      "type": "array",
      "description": "Policy dependencies on other governance domains",
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    },
    "compliance_metrics": {
      "type": "array",
      "description": "Metrics for compliance tracking",
      "items": {
        "type": "object",
        "required": ["name", "threshold", "frequency"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Metric name"
          },
          "threshold": {
            "oneOf": [{ "type": "number" }, { "type": "string" }],
            "description": "Compliance threshold value"
          },
          "frequency": {
            "type": "string",
            "description": "How often metric is checked",
            "enum": ["continuous", "daily", "weekly", "monthly", "quarterly", "annually", "per_build", "per_release", "per_merge", "per_incident"]
          }
        }
      }
    }
  },
  "additionalProperties": false
}
