# ═══════════════════════════════════════════════════════════════════════════════
#                    SynergyMesh Environment Configuration Template
#                    環境變數配置模板
# ═══════════════════════════════════════════════════════════════════════════════
#
# Copy this file to .env and fill in your values
# 複製此文件為 .env 並填入您的配置值
#
# ═══════════════════════════════════════════════════════════════════════════════

# ─────────────────────────────────────────────────────────────────────────────
# System Configuration
# ─────────────────────────────────────────────────────────────────────────────

# Environment: development, staging, production
SYNERGYMESH_ENV=development

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Application port
PORT=3000

# ─────────────────────────────────────────────────────────────────────────────
# AI/ML Configuration
# ─────────────────────────────────────────────────────────────────────────────

# OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Azure OpenAI (optional)
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_DEPLOYMENT_NAME=

# Anthropic (optional)
ANTHROPIC_API_KEY=

# Hugging Face (optional)
HUGGINGFACE_API_KEY=

# ─────────────────────────────────────────────────────────────────────────────
# Database Configuration
# ─────────────────────────────────────────────────────────────────────────────

# PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/synergymesh
DATABASE_POOL_SIZE=10

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# MongoDB (optional)
MONGODB_URL=

# ─────────────────────────────────────────────────────────────────────────────
# GitHub Configuration
# ─────────────────────────────────────────────────────────────────────────────

# GitHub App
GITHUB_APP_ID=
GITHUB_APP_PRIVATE_KEY=
GITHUB_APP_WEBHOOK_SECRET=

# GitHub Token (for personal access)
GITHUB_TOKEN=

# Repository
GITHUB_OWNER=
GITHUB_REPO=

# ─────────────────────────────────────────────────────────────────────────────
# MCP (Model Context Protocol) Configuration
# ─────────────────────────────────────────────────────────────────────────────

MCP_ENABLED=true
MCP_SERVER_PORT=3001
MCP_AUTH_TOKEN=

# ─────────────────────────────────────────────────────────────────────────────
# Cloud Provider Configuration
# ─────────────────────────────────────────────────────────────────────────────

# AWS
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# Google Cloud
GOOGLE_APPLICATION_CREDENTIALS=
GCP_PROJECT_ID=

# Azure
AZURE_SUBSCRIPTION_ID=
AZURE_TENANT_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=

# ─────────────────────────────────────────────────────────────────────────────
# Kubernetes Configuration
# ─────────────────────────────────────────────────────────────────────────────

KUBECONFIG=~/.kube/config
K8S_NAMESPACE=synergymesh

# ─────────────────────────────────────────────────────────────────────────────
# Monitoring & Observability
# ─────────────────────────────────────────────────────────────────────────────

# Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_URL=http://localhost:3000
GRAFANA_API_KEY=

# OpenTelemetry
OTEL_ENABLED=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# Sentry (optional)
SENTRY_DSN=

# ─────────────────────────────────────────────────────────────────────────────
# Security Configuration
# ─────────────────────────────────────────────────────────────────────────────

# JWT
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRATION=24h

# API Keys
API_KEY_SECRET=

# Encryption
ENCRYPTION_KEY=

# Path Security (PR #351 - SEC-PATH-001)
# Define the safe root directory for file operations to prevent path traversal attacks
# Reference: docs/security/PR351_SECURITY_ENHANCEMENTS.md
SAFE_ROOT_PATH=/var/lib/synergymesh/safefiles

# ─────────────────────────────────────────────────────────────────────────────
# Feature Flags
# ─────────────────────────────────────────────────────────────────────────────

FEATURE_AUTO_FIX=true
FEATURE_SELF_LEARNING=true
FEATURE_AUTO_REMEDIATION=true
FEATURE_SLSA_COMPLIANCE=true

# ─────────────────────────────────────────────────────────────────────────────
# Phase-specific Configuration
# ─────────────────────────────────────────────────────────────────────────────

# Phase 5: Hallucination Detection
HALLUCINATION_THRESHOLD=0.3

# Phase 6: Constitution
CONSTITUTION_ENFORCEMENT=strict

# Phase 10: Safety
CIRCUIT_BREAKER_THRESHOLD=5
EMERGENCY_STOP_ENABLED=true

# Phase 11: Monitoring
MONITORING_INTERVAL_SECONDS=30

# Phase 12: CI Error Handler
AUTO_CREATE_ISSUES=true
AUTO_FIX_ENABLED=true

# Phase 13: YAML Module System
SLSA_LEVEL=3
