# MachineNativeOps Environment Configuration
# 環境變量配置示例文件

# Security
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
DB_PASSWORD=your-database-password
REDIS_PASSWORD=your-redis-password

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=machinenativeops
DB_USER=mno_user

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET=machinenativeops-data
BACKUP_BUCKET=machinenativeops-backups

# Application Configuration
FRONTEND_URL=https://yourdomain.com
API_URL=https://api.yourdomain.com
ENVIRONMENT=production
DEBUG=false

# Monitoring
GRAFANA_PASSWORD=your-grafana-password
JAEGER_ENDPOINT=http://jaeger:14268/api/traces
SYSLOG_ADDRESS=udp://localhost:514

# Service Configuration
CONSUL_HOST=localhost
CONSUL_PORT=8500
RABBITMQ_USER=mno_user
RABBITMQ_PASSWORD=your-rabbitmq-password

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Business Configuration
MAX_PROJECTS_PER_USER=100
MAX_TASKS_PER_PROJECT=1000
WORKFLOW_TIMEOUT=3600
RESOURCE_COST_PER_HOUR=0.5

# Feature Flags
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_REAL_TIME_NOTIFICATIONS=true
ENABLE_CUSTOM_WORKFLOWS=true
ENABLE_MULTI_TENANT=false
ENABLE_ADVANCED_SECURITY=true