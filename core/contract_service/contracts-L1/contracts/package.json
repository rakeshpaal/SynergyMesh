{
  "name": "@synergymesh/contracts-l1",
  "version": "1.0.0",
  "description": "SynergyMesh Contracts L1 - Core contract management service",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "build:clean": "npm run clean && npm run build",
    "lint": "eslint src/**/*.ts --max-warnings 0 --ignore-pattern \"**/*.test.ts\" --ignore-pattern \"**/__tests__/**\" --no-warn-ignored",
    "lint:fix": "eslint src/**/*.ts --fix --ignore-pattern \"**/*.test.ts\" --ignore-pattern \"**/__tests__/**\"",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "typecheck": "tsc --noEmit",
    "sbom": "npm audit --audit-level moderate --json > sbom.json",
    "scan": "npm audit --audit-level high",
    "predeploy": "npm run typecheck && npm run lint && npm run test && npm run build",
    "clean": "rimraf dist"
  },
  "keywords": [
    "contracts",
    "l1",
    "synergymesh",
    "microservice"
  ],
  "author": "SynergyMesh Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@sigstore/sign": "^2.3.2",
    "@sigstore/verify": "^1.2.1",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "express": "^4.22.1",
    "helmet": "^7.2.0",
    "uuid": "^9.0.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.25",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.26",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-import-resolver-typescript": "^3.10.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "prettier": "^3.7.4",
    "rimraf": "^5.0.10",
    "supertest": "^6.3.4",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2"
  }
}
