version: '3.8'

services:
  {{ package_name }}:
    build:
      context: .
      dockerfile: Dockerfile
    ports:
      - "8000:8000"
    environment:
      - ENVIRONMENT=development
{% if has_database %}
      - DATABASE_URL={{ features.database.type }}://user:password@db:5432/{{ package_name }}
{% endif %}
{% if has_cache %}
      - REDIS_URL=redis://redis:6379/0
{% endif %}
    depends_on:
{% if has_database %}
      - db
{% endif %}
{% if has_cache %}
      - redis
{% endif %}
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8000/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s

{% if has_database %}
  db:
    image: postgres:15-alpine
    environment:
      - POSTGRES_USER=user
      - POSTGRES_PASSWORD=password
      - POSTGRES_DB={{ package_name }}
    volumes:
      - postgres_data:/var/lib/postgresql/data
    ports:
      - "5432:5432"
{% endif %}

{% if has_cache %}
  redis:
    image: redis:7-alpine
    ports:
      - "6379:6379"
    volumes:
      - redis_data:/data
{% endif %}

volumes:
{% if has_database %}
  postgres_data:
{% endif %}
{% if has_cache %}
  redis_data:
{% endif %}
