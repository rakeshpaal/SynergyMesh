{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "User Schema",
  "type": "object",
  "required": [
    "id",
    "email",
    "display_name",
    "tenant_id",
    "status"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^usr_[a-zA-Z0-9]{20}$"
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "display_name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100
    },
    "avatar_url": {
      "type": "string",
      "format": "uri"
    },
    "auth_provider": {
      "type": "string",
      "enum": ["email", "google", "github", "saml"]
    },
    "email_verified": {
      "type": "boolean"
    },
    "mfa_enabled": {
      "type": "boolean"
    },
    "tenant_id": {
      "type": "string",
      "pattern": "^tnt_[a-zA-Z0-9]{20}$"
    },
    "roles": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "projects": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["project_id", "role", "joined_at"],
        "properties": {
          "project_id": {
            "type": "string",
            "pattern": "^prj_[a-zA-Z0-9]{20}$"
          },
          "role": {
            "type": "string",
            "enum": ["owner", "admin", "developer", "viewer"]
          },
          "joined_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      }
    },
    "status": {
      "type": "string",
      "enum": ["active", "inactive", "suspended"]
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    },
    "last_login_at": {
      "type": "string",
      "format": "date-time"
    }
  }
}