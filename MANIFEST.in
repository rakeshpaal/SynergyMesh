# ============================================================================
# MANIFEST.in - Python Package Manifest
# Specifies additional files to include in source distributions
# ============================================================================

# Include essential documentation
include README.md
include README.en.md
include LICENSE
include CHANGELOG.md
include VERSION

# Include installation and build guides
include INSTALL.md
include BUILD.md
include RELEASE.md
include TROUBLESHOOTING.md

# Include configuration files
include synergymesh.yaml
include machine-native-ops.yaml
include pyproject.toml
include setup.py

# Include governance structure
recursive-include governance *.yaml *.yml *.json *.md *.txt
recursive-include governance/schemas *.json
recursive-include governance/policies *.rego
recursive-include governance/sbom *.spdx *.cdx

# Include configuration
recursive-include config *.yaml *.yml *.json

# Include documentation
recursive-include docs *.md *.yaml *.yml
recursive-include docs/assets *.png *.jpg *.svg *.ico *.icns

# Include core modules
recursive-include core *.py
recursive-include core *.yaml *.yml *.json

# Include automation scripts
recursive-include automation *.py *.sh *.yaml *.yml

# Include tools
recursive-include tools *.py *.sh

# Include MCP servers
recursive-include mcp-servers *.ts *.js *.json

# Include build files
recursive-include build *.bat *.sh *.ps1 *.yaml *.yml *.txt *.rb *.spec *.plist *.service

# Exclude unwanted files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude *.swp
global-exclude *.swo
global-exclude *~

# Exclude build artifacts
prune build/windows/dist
prune build/windows/build
prune build/macos/dist
prune build/macos/build
prune build/linux/dist
prune build/linux/build
prune build/linux/debian/synergymesh-governance_*

# Exclude node_modules and other large directories
prune node_modules
prune .git
prune .github-private
prune .vscode
prune .idea
prune .refactor-backups

# Exclude test files
prune tests
global-exclude test_*.py
global-exclude *_test.py

# Exclude development files
exclude .gitignore
exclude .gitattributes
exclude .dockerignore
exclude .eslintrc.yaml
exclude .markdownlint.json
exclude .prettierrc
exclude docker-compose.yml
exclude docker-compose.dev.yml
exclude Dockerfile
