for workflow in .github/workflows/*.yml .github/workflows/*.yaml; do
    [ -f "$workflow" ] || continue
    
    # Check for timeout-minutes at job level
    if ! grep -q "timeout-minutes:" "$workflow"; then
        echo "âš ï¸ Missing timeout-minutes in: $workflow"
        WORKFLOW_ISSUES=$((WORKFLOW_ISSUES + 1))
    fi
    
    # Check for concurrency control
    if ! grep -q "concurrency:" "$workflow"; then
        echo "âš ï¸ Missing concurrency control in: $workflow"
        # Not all workflows need concurrency, just warning
    fi
done

echo "âœ… Workflow standards check completed"

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
