SKELETON_INDEX="unmanned-engineer-ceo/60-machine-guides/70-architecture-skeletons/skeletons-index.yaml"
if [ -f "$SKELETON_INDEX" ]; then
    if python3 -c "import yaml; yaml.safe_load(open('$SKELETON_INDEX'))" 2>/dev/null; then
        echo "âœ… Skeleton index is valid"
    else
        echo "âŒ Skeleton index has invalid YAML syntax"
