    "README.md"
    "LICENSE"
    ".github/workflows/01-validate.yml"
    ".github/workflows/02-test.yml"
    ".github/workflows/03-build.yml"
)

MISSING_FILES=0
for file in "${REQUIRED_FILES[@]}"; do
    if [ ! -f "$file" ]; then
        echo "âŒ Missing required file: $file"
        MISSING_FILES=$((MISSING_FILES + 1))
    fi
done

if [ $MISSING_FILES -gt 0 ]; then
    echo "âŒ Found $MISSING_FILES missing required files."
    exit 1
