{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "API Governance Schema",
  "description": "Schema for API definitions under API governance",
  "type": "object",
  "required": ["name", "version", "endpoints"],
  "properties": {
    "name": {
      "type": "string",
      "description": "API name"
    },
    "version": {
      "type": "string",
      "description": "API version",
      "pattern": "^v\\d+(\\.\\d+)?$"
    },
    "description": {
      "type": "string",
      "description": "API description"
    },
    "base_path": {
      "type": "string",
      "description": "Base API path"
    },
    "endpoints": {
      "type": "array",
      "description": "API endpoints",
      "items": {
        "type": "object",
        "required": ["path", "method"],
        "properties": {
          "path": {
            "type": "string",
            "pattern": "^/[a-z]"
          },
          "method": {
            "type": "string",
            "enum": ["GET", "POST", "PUT", "PATCH", "DELETE", "HEAD", "OPTIONS"]
          },
          "summary": {
            "type": "string"
          },
          "authentication": {
            "type": "string",
            "enum": ["oauth2", "jwt", "api_key", "basic"]
          },
          "rate_limit_rpm": {
            "type": "integer",
            "minimum": 1
          },
          "response_time_ms": {
            "type": "integer"
          }
        }
      }
    },
    "authentication_schemes": {
      "type": "array",
      "description": "Supported authentication schemes",
      "items": {
        "type": "string"
      }
    },
    "deprecation": {
      "type": "object",
      "description": "Deprecation information",
      "properties": {
        "status": {
          "type": "string",
          "enum": ["active", "deprecated", "retired"]
        },
        "sunset_date": {
          "type": "string",
          "format": "date"
        }
      }
    }
  },
  "additionalProperties": false
}
