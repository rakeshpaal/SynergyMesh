{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Architecture Governance Schema",
  "description": "Schema for architecture definitions and contracts",
  "type": "object",
  "required": ["component_name", "layer"],
  "properties": {
    "component_name": {
      "type": "string",
      "description": "Component name"
    },
    "description": {
      "type": "string",
      "description": "Component description"
    },
    "layer": {
      "type": "string",
      "description": "Architectural layer",
      "enum": ["application", "business", "integration", "data", "infrastructure"]
    },
    "owned_by": {
      "type": "string",
      "description": "Team owning this component"
    },
    "interface": {
      "type": "object",
      "description": "Public interface definition",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["REST", "gRPC", "GraphQL", "Event", "Message"]
        },
        "specification_url": {
          "type": "string"
        }
      }
    },
    "dependencies": {
      "type": "array",
      "description": "Component dependencies",
      "items": {
        "type": "object",
        "properties": {
          "component": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["synchronous", "asynchronous", "event_based"]
          }
        }
      }
    },
    "design_patterns": {
      "type": "array",
      "description": "Design patterns used",
      "items": {
        "type": "string"
      }
    },
    "maturity_level": {
      "type": "string",
      "enum": ["alpha", "beta", "stable", "mature"],
      "description": "Component maturity level"
    },
    "version": {
      "type": "string",
      "pattern": "^v\\d+(\\.\\d+)?$"
    },
    "deprecation_status": {
      "type": "string",
      "enum": ["active", "deprecated", "retired"]
    }
  },
  "additionalProperties": false
}
