{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Cost Management Schema",
  "description": "Schema for cost tracking and allocation definitions",
  "type": "object",
  "required": ["cost_id", "resource_type"],
  "properties": {
    "cost_id": {
      "type": "string",
      "description": "Unique cost record identifier"
    },
    "resource_type": {
      "type": "string",
      "description": "Type of resource",
      "enum": ["compute", "storage", "network", "database", "service", "license"]
    },
    "resource_name": {
      "type": "string",
      "description": "Name of the resource"
    },
    "monthly_cost": {
      "type": "number",
      "description": "Monthly cost in USD",
      "minimum": 0
    },
    "cost_center": {
      "type": "string",
      "description": "Cost center code"
    },
    "team_id": {
      "type": "string",
      "description": "Owning team identifier"
    },
    "project_id": {
      "type": "string",
      "description": "Associated project identifier"
    },
    "environment": {
      "type": "string",
      "enum": ["development", "staging", "production"]
    },
    "tags": {
      "type": "object",
      "description": "Resource tags for cost allocation",
      "additionalProperties": {
        "type": "string"
      }
    },
    "budget": {
      "type": "object",
      "description": "Budget allocation",
      "properties": {
        "monthly_limit": {
          "type": "number",
          "description": "Monthly budget limit"
        },
        "quarterly_limit": {
          "type": "number",
          "description": "Quarterly budget limit"
        },
        "annual_limit": {
          "type": "number",
          "description": "Annual budget limit"
        }
      }
    },
    "optimization_opportunities": {
      "type": "array",
      "description": "Identified cost optimization opportunities",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string"
          },
          "potential_savings": {
            "type": "number"
          }
        }
      }
    },
    "trend": {
      "type": "string",
      "description": "Cost trend",
      "enum": ["increasing", "stable", "decreasing"]
    }
  },
  "additionalProperties": false
}
