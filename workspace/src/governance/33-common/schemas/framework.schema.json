{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Governance Framework Schema",
  "description": "Standard schema for governance framework definitions",
  "type": "object",
  "required": ["name", "version", "components"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Framework name",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "description": "Framework version",
      "pattern": "^\\d+\\.\\d+(\\.\\d+)?$"
    },
    "description": {
      "type": "string",
      "description": "Framework description"
    },
    "scope": {
      "type": "array",
      "description": "Governance dimensions this framework covers",
      "items": {
        "type": "string"
      }
    },
    "components": {
      "type": "array",
      "description": "Framework components and their responsibilities",
      "items": {
        "type": "object",
        "required": ["name", "responsibility"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Component name"
          },
          "responsibility": {
            "type": "string",
            "description": "Component responsibility"
          },
          "dependencies": {
            "type": "array",
            "description": "Component dependencies",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "principles": {
      "type": "array",
      "description": "Guiding principles",
      "items": {
        "type": "string"
      }
    },
    "measurements": {
      "type": "array",
      "description": "How framework success is measured",
      "items": {
        "type": "object",
        "required": ["metric"],
        "properties": {
          "metric": {
            "type": "string"
          },
          "target": {
            "oneOf": [
              {"type": "string"},
              {"type": "number"}
            ]
          }
        }
      }
    }
  },
  "additionalProperties": false
}
