{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Governance Dependency Schema",
  "description": "Standard schema for defining governance dependencies",
  "type": "object",
  "required": ["name", "version", "dependencies"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Entity name"
    },
    "version": {
      "type": "string",
      "description": "Entity version",
      "pattern": "^\\d+\\.\\d+(\\.\\d+)?$"
    },
    "dependencies": {
      "type": "array",
      "description": "List of dependencies",
      "items": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Dependency name"
          },
          "type": {
            "type": "string",
            "description": "Dependency type",
            "enum": ["required", "optional", "recommended"]
          },
          "version": {
            "type": "string",
            "description": "Required version constraint"
          },
          "reason": {
            "type": "string",
            "description": "Why this dependency is needed"
          },
          "initialization_order": {
            "type": "integer",
            "description": "Priority in initialization order",
            "minimum": 0
          }
        }
      }
    },
    "circular_dependency_check": {
      "type": "boolean",
      "description": "Whether to check for circular dependencies"
    },
    "health_check_definition": {
      "type": "object",
      "description": "Health check definition for this entity",
      "properties": {
        "required": {
          "type": "boolean"
        },
        "interval_seconds": {
          "type": "integer",
          "minimum": 1
        },
        "timeout_seconds": {
          "type": "integer",
          "minimum": 1
        }
      }
    }
  },
  "additionalProperties": false
}
