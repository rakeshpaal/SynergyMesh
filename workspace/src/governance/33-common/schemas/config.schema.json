{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Governance Configuration Schema",
  "description": "Standard schema for governance configuration files",
  "type": "object",
  "required": ["name", "version"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Configuration name",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "description": "Configuration version",
      "pattern": "^\\d+\\.\\d+(\\.\\d+)?$"
    },
    "environment": {
      "type": "string",
      "description": "Target environment",
      "enum": ["development", "staging", "production", "all"]
    },
    "enabled": {
      "type": "boolean",
      "description": "Whether this configuration is enabled"
    },
    "settings": {
      "type": "object",
      "description": "Configuration settings",
      "additionalProperties": true
    },
    "overrides": {
      "type": "object",
      "description": "Environment-specific overrides",
      "properties": {
        "development": {
          "type": "object",
          "description": "Development environment overrides"
        },
        "staging": {
          "type": "object",
          "description": "Staging environment overrides"
        },
        "production": {
          "type": "object",
          "description": "Production environment overrides"
        }
      }
    },
    "validation_rules": {
      "type": "array",
      "description": "Rules for validating this configuration",
      "items": {
        "type": "object",
        "required": ["rule"],
        "properties": {
          "rule": {
            "type": "string",
            "description": "Validation rule"
          },
          "severity": {
            "type": "string",
            "enum": ["error", "warning", "info"]
          }
        }
      }
    }
  },
  "additionalProperties": false
}
