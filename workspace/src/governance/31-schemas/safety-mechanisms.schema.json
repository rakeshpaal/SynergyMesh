{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://machinenativeops.io/schemas/safety-mechanisms.schema.json",
  "title": "SynergyMesh Safety Mechanisms",
  "description": "Schema for safety-mechanisms.yaml - defines safety checks, triggers, actions",
  "type": "object",
  "required": ["version", "mechanisms"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "global_settings": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "default_action": { "type": "string" },
        "logging_level": { "type": "string" }
      }
    },
    "mechanisms": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "trigger"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^M-[A-Z_]+$",
            "description": "Mechanism ID (e.g., M-HIGH_RISK_OUTPUT)"
          },
          "name": { "type": "string" },
          "description": { "type": "string" },
          "trigger": {
            "type": "string",
            "enum": ["before_input", "before_tool_call", "before_final_output", "on_error", "periodic"]
          },
          "environments": {
            "type": "array",
            "items": { "type": "string" },
            "description": "References to environment.yaml env IDs"
          },
          "constitution_refs": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^P-[A-Z]+-\\d{3}$"
            },
            "description": "References to ai-constitution principle IDs"
          },
          "reviewers": {
            "type": "array",
            "items": { "type": "string" },
            "description": "References to virtual-experts.yaml expert IDs"
          },
          "conditions": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "field": { "type": "string" },
                "operator": { "type": "string" },
                "value": {}
              }
            }
          },
          "actions_on_violation": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["type"],
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["block", "warn", "log", "escalate", "return_safe_explanation", "rollback"]
                },
                "message": { "type": "string" },
                "notify": { "type": "array", "items": { "type": "string" } }
              }
            }
          },
          "fallback": {
            "type": "object",
            "properties": {
              "action": { "type": "string" },
              "message": { "type": "string" }
            }
          }
        }
      }
    },
    "circuit_breakers": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "threshold": { "type": "integer" },
          "window_seconds": { "type": "integer" },
          "cooldown_seconds": { "type": "integer" }
        }
      }
    }
  }
}
