{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schema.superroot.kn/mndoc/entity/configuration/v1",
  "title": "Configuration Entity Schema",
  "description": "定義配置實體結構。Defines the structure for Configuration entities representing system configurations.",
  "type": "object",
  "required": ["$schema", "entity", "id", "key", "source_file"],
  "properties": {
    "$schema": {
      "type": "string",
      "const": "https://schema.superroot.kn/mndoc/entity/configuration/v1",
      "description": "Schema namespace identifier"
    },
    "entity": {
      "type": "string",
      "const": "Configuration",
      "description": "Entity type discriminator"
    },
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9]+([a-z0-9-_.]*[a-z0-9])?$",
      "description": "Configuration identifier"
    },
    "key": {
      "type": "string",
      "description": "Configuration key path (e.g., system.core.ai_engine)"
    },
    "title": {
      "type": "string",
      "description": "Human-readable configuration name"
    },
    "description": {
      "type": "string",
      "description": "Configuration description"
    },
    "value": {
      "description": "Configuration value (any type)"
    },
    "value_type": {
      "type": "string",
      "enum": ["string", "number", "boolean", "array", "object", "path"],
      "description": "Value type"
    },
    "source_file": {
      "type": "string",
      "description": "Source configuration file path"
    },
    "target_ref": {
      "type": "string",
      "description": "Reference to target component or module path"
    },
    "validated": {
      "type": "boolean",
      "description": "Whether this configuration has been validated"
    },
    "schema_ref": {
      "type": "string",
      "description": "Reference to validation schema"
    },
    "environment": {
      "type": "string",
      "enum": ["development", "staging", "production", "all"],
      "description": "Target environment"
    },
    "sensitive": {
      "type": "boolean",
      "description": "Whether this configuration contains sensitive data"
    },
    "owner": {
      "type": "string",
      "description": "Configuration owner"
    },
    "status": {
      "type": "string",
      "enum": ["draft", "active", "deprecated", "archived"],
      "description": "Lifecycle status"
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Classification tags"
    },
    "meta": {
      "type": "object",
      "description": "Additional metadata"
    }
  },
  "additionalProperties": false
}
