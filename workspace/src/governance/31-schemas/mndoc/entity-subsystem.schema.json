{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schema.superroot.kn/mndoc/entity/subsystem/v1",
  "title": "Subsystem Entity Schema",
  "description": "定義子系統實體結構。Defines the structure for Subsystem entities representing major system components.",
  "type": "object",
  "required": ["$schema", "entity", "id", "type", "layer", "title"],
  "properties": {
    "$schema": {
      "type": "string",
      "const": "https://schema.superroot.kn/mndoc/entity/subsystem/v1",
      "description": "Schema namespace identifier"
    },
    "entity": {
      "type": "string",
      "const": "Subsystem",
      "description": "Entity type discriminator"
    },
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9]+([a-z0-9-]*[a-z0-9])?$",
      "description": "Subsystem identifier (slug format)"
    },
    "type": {
      "type": "string",
      "const": "subsystem",
      "description": "Entity type"
    },
    "title": {
      "type": "string",
      "description": "Human-readable subsystem name"
    },
    "description": {
      "type": "string",
      "description": "Subsystem description"
    },
    "layer": {
      "type": "string",
      "enum": [
        "control-plane",
        "data-plane",
        "compute",
        "governance",
        "automation",
        "infrastructure",
        "observability"
      ],
      "description": "Architecture layer"
    },
    "domain": {
      "type": "string",
      "description": "Business/technical domain"
    },
    "capabilities": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Capabilities provided by this subsystem"
    },
    "components": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9]+([a-z0-9-]*[a-z0-9])?$"
      },
      "description": "List of component identifiers belonging to this subsystem"
    },
    "interfaces": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Interfaces exposed by this subsystem"
    },
    "dependencies": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Dependencies on other subsystems or components"
    },
    "pipelines": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Governance or CI/CD pipelines (for governance subsystems)"
    },
    "architecture": {
      "type": "string",
      "description": "Architecture pattern (e.g., 'five-skeleton' for autonomous framework)"
    },
    "owner": {
      "type": "string",
      "description": "Subsystem owner"
    },
    "status": {
      "type": "string",
      "enum": ["draft", "active", "deprecated", "archived"],
      "description": "Lifecycle status"
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Classification tags"
    },
    "evidence_ref": {
      "type": "object",
      "properties": {
        "sbom": { "type": "string" },
        "signature": { "type": "string" },
        "slsa_ref": { "type": "string" }
      },
      "description": "Supply chain evidence references"
    },
    "meta": {
      "type": "object",
      "description": "Additional metadata"
    }
  },
  "additionalProperties": false
}
