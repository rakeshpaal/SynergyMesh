{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schema.superroot.kn/mndoc/entity/governance/v1",
  "title": "Governance Entity Schema",
  "description": "定義治理實體結構。Defines the structure for Governance entities representing governance pipelines and stages.",
  "type": "object",
  "required": ["$schema", "entity", "id", "type"],
  "properties": {
    "$schema": {
      "type": "string",
      "const": "https://schema.superroot.kn/mndoc/entity/governance/v1",
      "description": "Schema namespace identifier"
    },
    "entity": {
      "type": "string",
      "const": "Governance",
      "description": "Entity type discriminator"
    },
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9]+([a-z0-9-]*[a-z0-9])?$",
      "description": "Governance entity identifier"
    },
    "type": {
      "type": "string",
      "enum": ["pipeline", "stage", "policy", "rule", "gate"],
      "description": "Governance entity type"
    },
    "title": {
      "type": "string",
      "description": "Human-readable name"
    },
    "description": {
      "type": "string",
      "description": "Description of the governance entity"
    },
    "pipeline": {
      "type": "object",
      "properties": {
        "stages": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/pipelineStage"
          },
          "description": "Pipeline stages in order"
        },
        "on_failure": {
          "type": "string",
          "enum": ["abort", "continue", "rollback", "alert"],
          "description": "Action on stage failure"
        }
      },
      "description": "Pipeline definition (for pipeline type)"
    },
    "stage": {
      "$ref": "#/$defs/pipelineStage",
      "description": "Single stage definition (for stage type)"
    },
    "policy": {
      "type": "object",
      "properties": {
        "engine": {
          "type": "string",
          "enum": ["opa", "conftest", "kyverno", "custom"],
          "description": "Policy engine"
        },
        "rules_path": {
          "type": "string",
          "description": "Path to policy rules"
        },
        "enforcement": {
          "type": "string",
          "enum": ["enforce", "audit", "warn"],
          "description": "Enforcement mode"
        }
      },
      "description": "Policy definition (for policy type)"
    },
    "owner": {
      "type": "string",
      "description": "Owner of this governance entity"
    },
    "status": {
      "type": "string",
      "enum": ["draft", "active", "deprecated", "archived"],
      "description": "Lifecycle status"
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Classification tags"
    },
    "evidence_ref": {
      "type": "object",
      "properties": {
        "sbom": { "type": "string" },
        "signature": { "type": "string" },
        "slsa_ref": { "type": "string" },
        "audit_log": { "type": "string" }
      },
      "description": "Evidence references"
    },
    "meta": {
      "type": "object",
      "description": "Additional metadata"
    }
  },
  "additionalProperties": false,
  "$defs": {
    "pipelineStage": {
      "type": "object",
      "required": ["id", "type"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^stage-[a-z0-9]+([a-z0-9-]*[a-z0-9])?$",
          "description": "Stage identifier"
        },
        "name": {
          "type": "string",
          "description": "Stage name"
        },
        "type": {
          "type": "string",
          "enum": [
            "lint",
            "format",
            "schema",
            "vector-test",
            "policy-gate",
            "k8s-validation",
            "sbom",
            "provenance",
            "sign",
            "audit"
          ],
          "description": "Stage type"
        },
        "description": {
          "type": "string",
          "description": "Stage description"
        },
        "tools": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Tools used in this stage"
        },
        "required": {
          "type": "boolean",
          "description": "Whether this stage is required"
        },
        "order": {
          "type": "integer",
          "minimum": 1,
          "description": "Execution order"
        },
        "timeout_seconds": {
          "type": "integer",
          "minimum": 1,
          "description": "Stage timeout in seconds"
        },
        "on_failure": {
          "type": "string",
          "enum": ["abort", "continue", "rollback", "alert"],
          "description": "Action on failure"
        }
      },
      "additionalProperties": false
    }
  }
}
