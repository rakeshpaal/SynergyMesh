{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://machinenativeops.io/schemas/environment.schema.json",
  "title": "SynergyMesh Environment Configuration",
  "description": "Schema for environment.yaml - defines environments, risk levels, regions, tenants",
  "type": "object",
  "required": ["version", "environments"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Schema version"
    },
    "environments": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "risk_level"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z][a-z0-9_-]*$",
            "description": "Environment identifier"
          },
          "name": {
            "type": "string",
            "description": "Human-readable name"
          },
          "risk_level": {
            "type": "string",
            "enum": ["low", "medium", "high", "critical"],
            "description": "Risk level for this environment"
          },
          "regions": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Available regions"
          },
          "tenants": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["id"],
              "properties": {
                "id": { "type": "string" },
                "name": { "type": "string" },
                "tier": { "type": "string" }
              }
            }
          },
          "features": {
            "type": "object",
            "additionalProperties": { "type": "boolean" }
          },
          "limits": {
            "type": "object",
            "properties": {
              "max_requests_per_minute": { "type": "integer" },
              "max_concurrent_tasks": { "type": "integer" },
              "max_memory_mb": { "type": "integer" }
            }
          }
        }
      }
    },
    "defaults": {
      "type": "object",
      "properties": {
        "environment": { "type": "string" },
        "region": { "type": "string" }
      }
    }
  }
}
