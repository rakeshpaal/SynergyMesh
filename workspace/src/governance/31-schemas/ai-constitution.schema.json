{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://machinenativeops.io/schemas/ai-constitution.schema.json",
  "title": "SynergyMesh AI Constitution",
  "description": "Schema for ai-constitution.yaml - defines principles, priorities, forbidden behaviors",
  "type": "object",
  "required": ["version", "principles"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "last_updated": { "type": "string", "format": "date-time" },
        "approved_by": { "type": "array", "items": { "type": "string" } }
      }
    },
    "priority_order": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Priority order: safety > compliance > task_success > efficiency"
    },
    "principles": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "level", "description"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^P-[A-Z]+-\\d{3}$",
            "description": "Principle ID (e.g., P-SAFETY-001)"
          },
          "level": {
            "type": "string",
            "enum": ["critical", "high", "medium", "low"]
          },
          "category": { "type": "string" },
          "description": { "type": "string" },
          "applies_to_environments": {
            "type": "array",
            "items": { "type": "string" }
          },
          "restricted_tools": {
            "type": "array",
            "items": { "type": "string" }
          },
          "enforcement": {
            "type": "string",
            "enum": ["strict", "advisory", "logging"]
          }
        }
      }
    },
    "forbidden_behaviors": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "description"],
        "properties": {
          "id": { "type": "string" },
          "description": { "type": "string" },
          "severity": { "type": "string" }
        }
      }
    },
    "conflict_resolution": {
      "type": "object",
      "properties": {
        "strategy": { "type": "string" },
        "escalation_path": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    }
  }
}
