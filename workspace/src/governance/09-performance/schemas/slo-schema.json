{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SLO Definition Schema",
  "description": "Schema for Service Level Objective definitions",
  "type": "object",
  "required": ["service_name", "slo_type", "target_value"],
  "properties": {
    "service_name": {
      "type": "string",
      "description": "Service name"
    },
    "slo_type": {
      "type": "string",
      "description": "Type of SLO",
      "enum": ["availability", "latency", "error_rate", "throughput", "reliability"]
    },
    "description": {
      "type": "string",
      "description": "SLO description"
    },
    "target_value": {
      "oneOf": [
        {
          "type": "number",
          "description": "Target value (percentage, milliseconds, etc.)"
        },
        {
          "type": "string",
          "pattern": "^\\d+\\.?\\d*%?$"
        }
      ]
    },
    "measurement_window": {
      "type": "string",
      "description": "Time window for measurement",
      "enum": ["1h", "24h", "7d", "30d", "90d"]
    },
    "error_budget": {
      "type": "number",
      "description": "Allowed error budget percentage",
      "minimum": 0,
      "maximum": 100
    },
    "monitoring_metrics": {
      "type": "array",
      "description": "Metrics used to measure this SLO",
      "items": {
        "type": "string"
      }
    },
    "alert_threshold": {
      "type": "number",
      "description": "Alert threshold percentage"
    },
    "remediation_sli": {
      "type": "object",
      "description": "Remediation SLI",
      "properties": {
        "max_time_minutes": {
          "type": "integer"
        },
        "required_actions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "additionalProperties": false
}
