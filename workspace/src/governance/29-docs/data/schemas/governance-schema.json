{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Governance Configuration Schema",
  "type": "object",
  "required": ["version", "dimension", "status"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "dimension": {
      "type": "string",
      "pattern": "^[0-9]{2}-[a-z-]+$"
    },
    "status": {
      "type": "string",
      "enum": ["active", "planning", "deprecated"]
    }
  }
}
