{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Identity Governance Schema",
  "description": "Schema for identity and access control definitions",
  "type": "object",
  "required": ["name", "user_id"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Identity name"
    },
    "user_id": {
      "type": "string",
      "description": "User or service identifier"
    },
    "identity_type": {
      "type": "string",
      "enum": ["user", "service", "application"]
    },
    "roles": {
      "type": "array",
      "description": "Assigned roles",
      "items": {
        "type": "string"
      }
    },
    "permissions": {
      "type": "array",
      "description": "Specific permissions",
      "items": {
        "type": "string"
      }
    },
    "authentication_methods": {
      "type": "array",
      "description": "Allowed authentication methods",
      "items": {
        "type": "string",
        "enum": ["password", "mfa", "oauth2", "saml", "certificate"]
      }
    },
    "mfa_required": {
      "type": "boolean",
      "description": "Whether MFA is required"
    },
    "password_policy": {
      "type": "object",
      "properties": {
        "expiration_days": {
          "type": "integer"
        },
        "minimum_length": {
          "type": "integer"
        },
        "require_complexity": {
          "type": "boolean"
        }
      }
    },
    "access_scope": {
      "type": "object",
      "description": "Scope of access",
      "properties": {
        "resources": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "environments": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "time_based_access": {
          "type": "boolean"
        }
      }
    },
    "last_reviewed": {
      "type": "string",
      "format": "date"
    }
  },
  "additionalProperties": false
}
