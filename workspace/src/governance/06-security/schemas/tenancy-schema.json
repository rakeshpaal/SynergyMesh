{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Multi-Tenancy Governance Schema",
  "description": "Schema for tenant definitions and isolation controls",
  "type": "object",
  "required": ["tenant_id", "tenant_name"],
  "properties": {
    "tenant_id": {
      "type": "string",
      "description": "Unique tenant identifier"
    },
    "tenant_name": {
      "type": "string",
      "description": "Tenant name"
    },
    "organization": {
      "type": "string",
      "description": "Organization/customer name"
    },
    "status": {
      "type": "string",
      "enum": ["active", "suspended", "inactive"]
    },
    "isolation_level": {
      "type": "string",
      "description": "Tenant isolation level",
      "enum": ["complete", "database", "schema", "row"]
    },
    "database_instance": {
      "type": "string",
      "description": "Database instance ID"
    },
    "encryption_key_id": {
      "type": "string",
      "description": "Tenant-specific encryption key"
    },
    "quotas": {
      "type": "object",
      "description": "Resource quotas",
      "properties": {
        "storage_gb": {
          "type": "number"
        },
        "api_calls_per_month": {
          "type": "integer"
        },
        "concurrent_sessions": {
          "type": "integer"
        }
      }
    },
    "sla_tier": {
      "type": "string",
      "enum": ["basic", "professional", "enterprise"],
      "description": "Service level agreement tier"
    },
    "features": {
      "type": "array",
      "description": "Enabled features",
      "items": {
        "type": "string"
      }
    },
    "backup_retention_days": {
      "type": "integer",
      "description": "Backup retention period"
    },
    "data_residency": {
      "type": "string",
      "description": "Required data residency region"
    },
    "admin_users": {
      "type": "array",
      "description": "Tenant admin user IDs",
      "items": {
        "type": "string"
      }
    },
    "created_date": {
      "type": "string",
      "format": "date-time"
    }
  },
  "additionalProperties": false
}
