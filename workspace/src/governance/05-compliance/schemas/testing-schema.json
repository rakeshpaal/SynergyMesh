{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Testing Governance Schema",
  "description": "Schema for testing definitions and requirements",
  "type": "object",
  "required": ["name", "test_type"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Test suite name"
    },
    "test_type": {
      "type": "string",
      "description": "Type of test",
      "enum": ["unit", "integration", "acceptance", "performance", "security", "compatibility"]
    },
    "framework": {
      "type": "string",
      "description": "Testing framework used"
    },
    "coverage_target": {
      "type": "number",
      "description": "Target code coverage percentage",
      "minimum": 0,
      "maximum": 100
    },
    "critical_paths": {
      "type": "array",
      "description": "Critical paths requiring 100% coverage",
      "items": {
        "type": "string"
      }
    },
    "performance_targets": {
      "type": "object",
      "description": "Performance test targets",
      "properties": {
        "concurrent_users": {
          "type": "integer"
        },
        "response_time_ms": {
          "type": "integer"
        },
        "throughput_rps": {
          "type": "integer"
        }
      }
    },
    "compatibility_matrix": {
      "type": "array",
      "description": "Platforms to test against",
      "items": {
        "type": "object",
        "properties": {
          "platform": {
            "type": "string"
          },
          "version": {
            "type": "string"
          }
        }
      }
    },
    "environment": {
      "type": "string",
      "description": "Test environment",
      "enum": ["local", "staging", "production"]
    },
    "frequency": {
      "type": "string",
      "description": "Test execution frequency",
      "enum": ["per_commit", "daily", "weekly", "monthly"]
    }
  },
  "additionalProperties": false
}
