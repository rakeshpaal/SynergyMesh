{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Data Governance Schema",
  "description": "Schema for data definitions and classifications",
  "type": "object",
  "required": ["name", "classification"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Data asset name"
    },
    "description": {
      "type": "string",
      "description": "Data asset description"
    },
    "classification": {
      "type": "string",
      "description": "Data classification level",
      "enum": ["public", "internal", "confidential", "restricted"]
    },
    "data_type": {
      "type": "string",
      "description": "Type of data",
      "enum": ["pii", "financial", "health", "proprietary", "metadata"]
    },
    "owner": {
      "type": "string",
      "description": "Data owner"
    },
    "retention_days": {
      "type": "integer",
      "description": "Retention period in days",
      "minimum": 1
    },
    "encryption_required": {
      "type": "boolean",
      "description": "Whether encryption is required"
    },
    "encryption_algorithm": {
      "type": "string",
      "description": "Encryption algorithm",
      "enum": ["AES-256", "AES-128", "RSA-2048"]
    },
    "pii_fields": {
      "type": "array",
      "description": "Fields containing PII",
      "items": {
        "type": "string"
      }
    },
    "gdpr_compliant": {
      "type": "boolean",
      "description": "Whether data handling is GDPR compliant"
    },
    "access_control": {
      "type": "string",
      "enum": ["public", "authorized_only", "restricted"]
    },
    "audit_required": {
      "type": "boolean",
      "description": "Whether access auditing is required"
    }
  },
  "additionalProperties": false
}
