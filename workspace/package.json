{
  "name": "machinenativeops",
  "version": "1.0.0",
  "description": "MachineNativeOps - Next-generation cloud-native platform for intelligent business automation and seamless data orchestration",
  "private": true,
  "workspaces": [
    "src/mcp-servers",
    "src/core/contract_service/contracts-L1/contracts",
    "src/core/advisory-database",
    "src/apps/web",
    "src/ai/src/ai",
    "archive/unmanned-engineer-ceo/80-skeleton-configs"
  ],
  "scripts": {
    "lint": "npm run lint --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "install:all": "npm install --workspaces",
    "dev:stack": "bash scripts/start-machinenativeops-dev.sh",
    "docs:lint": "markdownlint \"**/*.md\"",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "cf:dev": "cd cloudflare/workers && npm run dev",
    "cf:deploy": "wrangler deploy",
    "cf:deploy:staging": "wrangler deploy --env staging",
    "cf:deploy:production": "wrangler deploy --env production",
    "cf:tail": "wrangler tail",
    "cf:tail:production": "wrangler tail --env production",
    "cf:kv:list": "wrangler kv:namespace list",
    "cf:d1:list": "wrangler d1 list",
    "cf:r2:list": "wrangler r2 bucket list",
    "cf:secret:put": "wrangler secret put",
    "cf:login": "wrangler login",
    "cf:whoami": "wrangler whoami",
    "build:worker": "cd cloudflare/workers && npm run build"
  },
  "keywords": [
    "enterprise-integration",
    "cloud-native",
    "ai-automation",
    "data-orchestration",
    "slsa",
    "provenance",
    "security",
    "sigstore"
  ],
  "author": "MachineNativeOps Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/MachineNativeOps/MachineNativeOps.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251221.0",
    "@eslint/js": "^9.39.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-import-resolver-typescript": "^3.10.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "markdownlint-cli": "^0.47.0",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "wrangler": "^4.54.0"
  },
  "dependencies": {
    "@eslint/eslintrc": "^3.3.3"
  }
}
