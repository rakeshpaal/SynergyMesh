{
  "title": "Naming Compliance",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "templating": {
    "list": [
      {
        "name": "env",
        "type": "custom",
        "query": "local,dev,staging,prod",
        "current": { "text": "prod", "value": "prod" }
      },
      {
        "name": "app",
        "type": "custom",
        "query": "chatops,my-app",
        "current": { "text": "chatops", "value": "chatops" }
      },
      {
        "name": "region",
        "type": "custom",
        "query": "local,us-east-1,ap-northeast-1,eu-west-1",
        "current": { "text": "local", "value": "local" }
      }
    ]
  },
  "panels": [
    {
      "type": "timeseries",
      "title": "NCR (Naming Compliance Rate)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "chatops_naming_compliance_rate{env=\"$env\",app=\"$app\",region=\"$region\"}",
          "legendFormat": "NCR"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "VFC (Validation Failure Count)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "chatops_naming_validation_failures_total{env=\"$env\",app=\"$app\",region=\"$region\"}",
          "legendFormat": "VFC"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "ARS (Auto Repair Success)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "chatops_naming_autofix_success_total{env=\"$env\",app=\"$app\",region=\"$region\"}",
          "legendFormat": "ARS"
        }
      ]
    },
    {
      "type": "heatmap",
      "title": "Violation Heatmap (by kind)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum by (kind) (chatops_naming_violations_total{env=\"$env\",app=\"$app\",region=\"$region\"})",
          "legendFormat": "{{kind}}"
        }
      ]
    }
  ]
}
