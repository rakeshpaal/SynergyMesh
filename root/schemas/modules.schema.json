{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "AAPS Modules Registry Schema (Phase 1)",
  "type": "object",
  "required": ["version", "hash_policy", "modules"],
  "properties": {
    "version": { "type": "integer" },
    "hash_policy": {
      "type": "object",
      "required": ["authoritative", "compatibility"],
      "properties": {
        "authoritative": { "type": "string", "enum": ["sha3-512"] },
        "compatibility": { "type": "string", "enum": ["sha256"] }
      },
      "additionalProperties": false
    },
    "modules": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "type": "object",
        "required": ["id", "name", "version", "type", "language", "status", "dependencies", "build", "runtime", "install", "health"],
        "properties": {
          "id": { "type": "string", "pattern": "^[a-z0-9][a-z0-9\\-]*$" },
          "name": { "type": "string" },
          "version": { "type": "string" },
          "description": { "type": "string" },
          "type": { "type": "string", "enum": ["core", "plugin", "tool"] },
          "language": { "type": "string", "enum": ["python", "typescript", "shell", "mixed"] },
          "status": { "type": "string", "enum": ["active", "disabled", "deprecated"] },
          "dependencies": { "type": "array", "items": { "type": "string" } },

          "build": {
            "type": "object",
            "required": ["builder", "context", "pyproject", "outputs"],
            "properties": {
              "builder": { "type": "string", "enum": ["python-wheel"] },
              "context": { "type": "string" },
              "pyproject": { "type": "string" },
              "lock_optional_paths": { "type": "array", "items": { "type": "string" } },
              "outputs": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "object",
                  "required": ["kind", "path"],
                  "properties": {
                    "kind": { "type": "string", "enum": ["python-wheel"] },
                    "path": { "type": "string" }
                  },
                  "additionalProperties": false
                }
              }
            },
            "additionalProperties": true
          },

          "runtime": {
            "type": "object",
            "required": ["command", "module", "serve_port", "health_path"],
            "properties": {
              "command": { "type": "string" },
              "module": { "type": "string" },
              "serve_port": { "type": "integer" },
              "health_path": { "type": "string" }
            },
            "additionalProperties": true
          },

          "install": {
            "type": "object",
            "required": ["rootfs_fragment"],
            "properties": {
              "rootfs_fragment": {
                "type": "object",
                "required": ["enabled", "paths"],
                "properties": {
                  "enabled": { "type": "boolean" },
                  "paths": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "required": ["from", "to"],
                      "properties": {
                        "from": { "type": "string" },
                        "to": { "type": "string" }
                      },
                      "additionalProperties": false
                    }
                  }
                },
                "additionalProperties": false
              }
            },
            "additionalProperties": true
          },

          "health": {
            "type": "object",
            "required": ["kind", "port", "path", "timeout_seconds"],
            "properties": {
              "kind": { "type": "string", "enum": ["http"] },
              "port": { "type": "integer" },
              "path": { "type": "string" },
              "timeout_seconds": { "type": "integer", "minimum": 1 }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": false
}